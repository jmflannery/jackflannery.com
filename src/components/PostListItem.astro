---
import PrettyDate from '@/components/PrettyDate.astro';
const {post} = Astro.props;
---

<li>
  <article>
    <a href={`/blog/${post.slug}`}>
      <h2>{post.title}</h2>
      <p>{post.description}</p>
      <PrettyDate date={post.published_at} />
    </a>
  </article>
</li>

<style>
  :root {
    --desc-font-size: 1.25rem;
  }

  li {
    border-bottom: 1px solid var(--color-slate-400);
    padding: calc(var(--margin-y) / 2) 0;
  }

  li:last-child {
    border: none;
  }

  h2 {
    margin-bottom: 0.75rem;
  }

  p {
    font-family: var(--font-sans);
    font-size: var(--desc-font-size);
    font-weight: 100;
    line-height: 1.2;
    margin-bottom: 0.75rem;
  }

  @media (min-width: 640px) {
    :root {
      --desc-font-size: 1.5rem;
    }
  }

  @media (min-width: 768px) {
    :root {
      --desc-font-size: 1.75rem;
    }
  }

  @media (min-width: 768px) {
    :root {
      --desc-font-size: 1.75rem;
    }
  }
</style>
